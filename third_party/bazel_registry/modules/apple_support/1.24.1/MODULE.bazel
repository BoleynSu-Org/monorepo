module(
    name = 'apple_support',
    version = '1.24.1',
    bazel_compatibility = ['>=7.0.0'],
    repo_name = 'build_bazel_apple_support',
)

bazel_dep(
    name = 'bazel_features',
    version = '1.37.0',
)

bazel_dep(
    name = 'bazel_skylib',
    version = '1.8.2',
)

bazel_dep(
    name = 'platforms',
    version = '1.0.0',
)

bazel_dep(
    name = 'rules_cc',
    version = '0.2.9',
)

apple_cc_configure_extension = use_extension(
    '//crosstool:setup.bzl',
    'apple_cc_configure_extension',
)

use_repo(
    apple_cc_configure_extension,
    'local_config_apple_cc',
    'local_config_apple_cc_toolchains',
)

register_toolchains(
    '@local_config_apple_cc_toolchains//:all',
)

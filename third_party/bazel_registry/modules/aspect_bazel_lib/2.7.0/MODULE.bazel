module(
    name = 'aspect_bazel_lib',
    version = '2.7.0',
    bazel_compatibility = ['>=6.0.0'],
    compatibility_level = 1,
)

bazel_dep(
    name = 'bazel_skylib',
    version = '1.5.0',
)

bazel_dep(
    name = 'platforms',
    version = '0.0.9',
)

bazel_dep(
    name = 'stardoc',
    version = '0.6.2',
    repo_name = 'io_bazel_stardoc',
)

toolchains = use_extension(
    '@aspect_bazel_lib//lib:extensions.bzl',
    'toolchains',
)

toolchains.copy_directory(
)

toolchains.copy_to_directory(
)

toolchains.jq(
)

toolchains.yq(
)

toolchains.coreutils(
)

toolchains.tar(
)

toolchains.expand_template(
)

toolchains.bats(
)

use_repo(
    toolchains,
    'bats_toolchains',
    'bsd_tar_toolchains',
    'copy_directory_toolchains',
    'copy_to_directory_toolchains',
    'coreutils_toolchains',
    'expand_template_toolchains',
    'jq_toolchains',
    'yq_toolchains',
)

register_toolchains(
    '@copy_directory_toolchains//:all',
    '@copy_to_directory_toolchains//:all',
    '@jq_toolchains//:all',
    '@yq_toolchains//:all',
    '@coreutils_toolchains//:all',
    '@expand_template_toolchains//:all',
    '@bats_toolchains//:all',
    '@bsd_tar_toolchains//:all',
)

bazel_dep(
    name = 'gazelle',
    version = '0.36.0',
)

bazel_dep(
    name = 'rules_go',
    version = '0.46.0',
    repo_name = 'io_bazel_rules_go',
)

go_deps = use_extension(
    '@gazelle//:extensions.bzl',
    'go_deps',
)

go_deps.from_file(
    go_mod = '//:go.mod',
)

use_repo(
    go_deps,
    'com_github_bmatcuk_doublestar_v4',
    'org_golang_x_exp',
)

module(
    name = 'rules_cc',
    version = '0.0.10',
)

bazel_dep(
    name = 'bazel_skylib',
    version = '1.7.1',
)

bazel_dep(
    name = 'platforms',
    version = '0.0.10',
)

bazel_dep(
    name = 'stardoc',
    version = '0.7.0',
)

cc_configure_extension = use_extension(
    '@bazel_tools//tools/cpp:cc_configure.bzl',
    'cc_configure_extension',
)

use_repo(
    cc_configure_extension,
    'local_config_cc_toolchains',
)

register_toolchains(
    '@local_config_cc_toolchains//:all',
)

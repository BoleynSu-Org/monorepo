module(
    name = 'rules_cc',
    version = '0.0.13',
)

bazel_dep(
    name = 'bazel_skylib',
    version = '1.7.1',
)

bazel_dep(
    name = 'platforms',
    version = '0.0.10',
)

bazel_dep(
    name = 'protobuf',
    version = '28.2',
)

cc_configure_extension = use_extension(
    '//cc:extensions.bzl',
    'cc_configure_extension',
)

use_repo(
    cc_configure_extension,
    'local_config_cc',
    'local_config_cc_toolchains',
)

register_toolchains(
    '@local_config_cc_toolchains//:all',
)

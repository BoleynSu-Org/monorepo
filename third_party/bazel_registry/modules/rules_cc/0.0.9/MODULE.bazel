module(
    name = 'rules_cc',
    version = '0.0.9',
    compatibility_level = 1,
)

bazel_dep(
    name = 'platforms',
    version = '0.0.9',
)

cc_configure_extension = use_extension(
    '@bazel_tools//tools/cpp:cc_configure.bzl',
    'cc_configure_extension',
)

use_repo(
    cc_configure_extension,
    'local_config_cc_toolchains',
)

register_toolchains(
    '@local_config_cc_toolchains//:all',
)

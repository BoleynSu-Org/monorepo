module(
    name = 'rules_kotlin',
    version = '1.9.6',
    repo_name = 'rules_kotlin',
)

bazel_dep(
    name = 'platforms',
    version = '0.0.10',
)

bazel_dep(
    name = 'bazel_skylib',
    version = '1.7.1',
)

bazel_dep(
    name = 'rules_java',
    version = '8.3.2',
)

bazel_dep(
    name = 'rules_python',
    version = '0.38.0',
)

bazel_dep(
    name = 'rules_cc',
    version = '0.1.0',
)

rules_kotlin_extensions = use_extension(
    '//src/main/starlark/core/repositories:bzlmod_setup.bzl',
    'rules_kotlin_extensions',
)

use_repo(
    rules_kotlin_extensions,
    'com_github_google_ksp',
    'com_github_jetbrains_kotlin',
    'com_github_pinterest_ktlint',
    'rules_android',
)

register_toolchains(
    '//kotlin/internal:default_toolchain',
)

remote_android_tools_extensions = use_extension(
    '@bazel_tools//tools/android:android_extensions.bzl',
    'remote_android_tools_extensions',
)

use_repo(
    remote_android_tools_extensions,
    'android_gmaven_r8',
    'android_tools',
)

bazel_dep(
    name = 'rules_proto',
    version = '7.0.2',
)

module(
    name = 'rules_oci',
    version = '1.7.5',
)

bazel_dep(
    name = 'aspect_bazel_lib',
    version = '2.7.9',
)

bazel_dep(
    name = 'bazel_skylib',
    version = '1.7.1',
)

bazel_dep(
    name = 'platforms',
    version = '0.0.10',
)

oci = use_extension(
    '//oci:extensions.bzl',
    'oci',
)

oci.toolchains(
    crane_version = 'v0.18.0',
)

use_repo(
    oci,
    'oci_crane_registry_toolchains',
    'oci_crane_toolchains',
)

register_toolchains(
    '@oci_crane_toolchains//:all',
    '@oci_crane_registry_toolchains//:all',
)

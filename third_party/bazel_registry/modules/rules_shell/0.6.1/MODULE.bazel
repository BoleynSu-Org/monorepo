module(
    name = 'rules_shell',
    version = '0.6.1',
)

bazel_dep(
    name = 'bazel_features',
    version = '1.36.0',
)

bazel_dep(
    name = 'bazel_skylib',
    version = '1.8.1',
)

bazel_dep(
    name = 'platforms',
    version = '1.0.0',
)

sh_configure = use_extension(
    '//shell/private/extensions:sh_configure.bzl',
    'sh_configure',
)

use_repo(
    sh_configure,
    'local_config_shell',
)

register_toolchains(
    '@local_config_shell//:all',
)
